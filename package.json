{
  "name": "dialogue-constructor",
  "version": "1.0.0",
  "private": true,
  "description": "Telegram bot and Mini App for dialogue constructor",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "test": "vitest run",
    "test:integration": "cross-env DATABASE_URL= REDIS_URL= npm test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "supertest": "^6.3.4",
    "testcontainers": "^10.9.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*": [
      "node -e \"require('child_process').execSync('npm run type-check', { stdio: 'inherit' })\"",
      "node -e \"require('child_process').execSync('npm run test', { stdio: 'inherit' })\""
    ]
  },
  "overrides": {
    "html-encoding-sniffer": "4.0.0"
  },
  "overridesComment": "html-encoding-sniffer@6 is CJS requiring ESM-only @exodus/bytes -> ERR_REQUIRE_ESM; pin until upstream ships CJS-safe import/dynamic import.",
  "engines": {
    "node": ">=18.0.0"
  }
}
