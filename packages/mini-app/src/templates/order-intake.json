{
  "id": "order-intake",
  "name": "Приём заказов",
  "description": "Каталог товаров, корзина и оформление заказа.",
  "category": "business",
  "icon": "🛒",
  "preview": {
    "screenshot": "/template-screenshots/order-intake.png",
    "features": [
      "Каталог товаров",
      "Корзина",
      "Оформление заказа",
      "Сбор контакта"
    ]
  },
  "schema": {
    "version": 1,
    "initialState": "start",
    "states": {
      "start": {
        "message": "Выберите раздел каталога:",
        "buttons": [
          { "text": "Горячие блюда", "nextState": "catalog_food" },
          { "text": "Напитки", "nextState": "catalog_drinks" },
          { "text": "Десерты", "nextState": "catalog_dessert" },
          { "text": "Корзина", "nextState": "cart" }
        ]
      },
      "catalog_food": {
        "message": "Горячие блюда: паста, суп, стейк.",
        "buttons": [
          { "text": "Добавить блюдо", "nextState": "cart" },
          { "text": "Назад", "nextState": "start" }
        ]
      },
      "catalog_drinks": {
        "message": "Напитки: чай, кофе, лимонад.",
        "buttons": [
          { "text": "Добавить напиток", "nextState": "cart" },
          { "text": "Назад", "nextState": "start" }
        ]
      },
      "catalog_dessert": {
        "message": "Десерты: чизкейк, брауни, мороженое.",
        "buttons": [
          { "text": "Добавить десерт", "nextState": "cart" },
          { "text": "Назад", "nextState": "start" }
        ]
      },
      "cart": {
        "message": "Ваша корзина готова к оформлению.",
        "buttons": [
          { "text": "Оформить заказ", "nextState": "delivery" },
          { "text": "Добавить ещё", "nextState": "start" }
        ]
      },
      "delivery": {
        "message": "Выберите способ получения заказа.",
        "buttons": [
          { "text": "Доставка", "nextState": "confirm" },
          { "text": "Самовывоз", "nextState": "confirm" },
          { "text": "Назад", "nextState": "cart" }
        ]
      },
      "confirm": {
        "message": "Проверьте заказ и подтвердите оформление.",
        "buttons": [
          { "text": "Подтвердить", "nextState": "done" },
          { "text": "Назад", "nextState": "cart" }
        ]
      },
      "done": {
        "message": "Заказ принят! Мы свяжемся с вами в ближайшее время.",
        "buttons": [
          { "text": "Новый заказ", "nextState": "start" }
        ]
      }
    }
  }
}
