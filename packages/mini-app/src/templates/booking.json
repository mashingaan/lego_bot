{
  "id": "booking",
  "name": "Бронирование",
  "description": "Бронирование столиков или услуг с выбором даты и времени.",
  "category": "business",
  "icon": "🏨",
  "preview": {
    "features": [
      "Выбор даты",
      "Выбор времени",
      "Количество гостей",
      "Подтверждение"
    ]
  },
  "schema": {
    "version": 1,
    "initialState": "start",
    "states": {
      "start": {
        "message": "Выберите дату бронирования:",
        "buttons": [
          { "text": "Сегодня", "nextState": "choose_time" },
          { "text": "Завтра", "nextState": "choose_time" },
          { "text": "Другой день", "nextState": "choose_time" }
        ]
      },
      "choose_time": {
        "message": "Выберите время:",
        "buttons": [
          { "text": "18:00", "nextState": "guests" },
          { "text": "19:00", "nextState": "guests" },
          { "text": "20:00", "nextState": "guests" },
          { "text": "Назад", "nextState": "start" }
        ]
      },
      "guests": {
        "message": "Сколько гостей будет?",
        "buttons": [
          { "text": "2 гостя", "nextState": "contact" },
          { "text": "4 гостя", "nextState": "contact" },
          { "text": "6 гостей", "nextState": "contact" },
          { "text": "Назад", "nextState": "choose_time" }
        ]
      },
      "contact": {
        "message": "Оставьте телефон для подтверждения брони.",
        "buttons": [
          { "text": "Передать контакт", "nextState": "confirm" },
          { "text": "Назад", "nextState": "guests" }
        ]
      },
      "confirm": {
        "message": "Подтвердите бронирование.",
        "buttons": [
          { "text": "Подтвердить", "nextState": "done" },
          { "text": "Изменить", "nextState": "start" }
        ]
      },
      "done": {
        "message": "Бронирование принято! Мы свяжемся для подтверждения.",
        "buttons": [
          { "text": "Новое бронирование", "nextState": "start" }
        ]
      }
    }
  }
}
