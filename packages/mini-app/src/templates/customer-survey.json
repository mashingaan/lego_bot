  "name": "Опрос клиентов",
  "description": "Сбор обратной связи через короткий опрос.",
  "category": "business",
  "icon": "📝",
  "preview": {
    "features": [
      "Серия вопросов",
      "Варианты ответов",
      "Благодарность в финале"
    ]
  },
  "schema": {
    "version": 1,
    "initialState": "start",
    "states": {
      "start": {
        "message": "Готовы пройти короткий опрос?",
        "buttons": [
          { "text": "Начать опрос", "nextState": "question1" }
        ]
      },
      "question1": {
        "message": "Как вы оцениваете наш сервис?",
        "buttons": [
          { "text": "Отлично", "nextState": "question2" },
          { "text": "Хорошо", "nextState": "question2" },
          { "text": "Нужно лучше", "nextState": "question2" }
        ]
      },
      "question2": {
        "message": "Что важнее всего для вас?",
        "buttons": [
          { "text": "Скорость", "nextState": "question3" },
          { "text": "Качество", "nextState": "question3" },
          { "text": "Цена", "nextState": "question3" }
        ]
      },
      "question3": {
        "message": "Порекомендовали бы нас друзьям?",
        "buttons": [
          { "text": "Да", "nextState": "thanks" },
          { "text": "Нет", "nextState": "thanks" }
        ]
      },
      "thanks": {
        "message": "Спасибо за ответы! Ваше мнение помогает нам стать лучше.",
